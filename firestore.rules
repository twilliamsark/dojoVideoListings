rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read for all users (authenticated or not)
    // Allow write only for authenticated users with email (admins)
    match /{document=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.email != null;
    }
  }
}
